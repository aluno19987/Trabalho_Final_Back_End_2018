@model Trabalho_Final.Models.Imagens

@{
    ViewBag.Title = "Create";
}

<h2>@ViewBag.filme.Nome</h2>


@using (Html.BeginForm("Create", "Imagens", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add Image</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileUpload" style="color:blue;" accept=".jpg" />
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model=> model.FilmeFK)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Image" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Edit Filme", "Edit", "Filmes", new { id = ViewBag.filme.IdFilme }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
